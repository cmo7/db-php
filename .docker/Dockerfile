FROM php:8.0-fpm

RUN apt-get update \
    && apt-get install -y \
    apt-utils \
    && apt-get install -y \
    libpq-dev \
    libzip-dev \
    && pecl install xdebug \
    && docker-php-ext-enable xdebug \
    && docker-php-ext-install -j$(nproc) zip \
    && docker-php-ext-install -j$(nproc) pgsql \
    && docker-php-ext-install -j$(nproc) pdo_pgsql